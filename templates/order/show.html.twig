{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="container col-xl-8 col-sm-12">
                <h1>Order</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ order.id }}</td>
                    </tr>
                    <tr>
                        <th>Code</th>
                        <td>{{ order.code }}</td>
                    </tr>
                    <tr>
                        <th>Items</th>
                        <td>{{ order.items ? order.items|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>PaymentDetails</th>
                        <td>{{ order.paymentDetails ? order.paymentDetails|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ order.status }}</td>
                    </tr>
                    <tr>
                        <th>ShippingDetails</th>
                        <td>{{ order.shippingDetails ? order.shippingDetails|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Total</th>
                        <td>{{ order.total }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('order_index') }}">back to list</a>

                <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

                {{ include('order/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
